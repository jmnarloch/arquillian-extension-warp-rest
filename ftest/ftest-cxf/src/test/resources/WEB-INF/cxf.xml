<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <jaxrs:server name="stocksService" address="/stocks">
        <jaxrs:serviceBeans>
            <ref bean="stockResource"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jaxbProvider" />
            <ref bean="jsonProvider" />
            <!--<ref bean="warpInterceptor" />-->
        </jaxrs:providers>
    </jaxrs:server>

    <!-- Creates JAXB Provider -->
    <bean id="jaxbProvider" class="org.apache.cxf.jaxrs.provider.JAXBElementProvider" />

    <!-- Creates  JSON Provider -->
    <bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.json.JSONProvider" />

    <!-- The JAX-RS service -->
    <bean id="stockResource" class="org.jboss.arquillian.quickstart.cxf.service.rs.StockServiceResource"/>

    <!-- The Warp CXF interceptor -->
    <bean id="warpInterceptor" class="org.jboss.arquillian.warp.extension.rest.cxf.interceptor.WarpCxfInterceptor"/>
</beans>